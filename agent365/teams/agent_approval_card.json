{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "refresh": {
    "action": {
      "type": "Action.Execute",
      "title": "Refresh",
      "verb": "refreshApprovalStatus"
    },
    "userIds": ["${APPROVER_USER_MRI}"]
  },
  "body": [
    {
      "type": "Container",
      "style": "emphasis",
      "bleed": true,
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "Image",
                  "url": "https://adaptivecards.io/content/pending.png",
                  "size": "Small"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "üöÄ CI/CD Deployment Approval Required",
                  "weight": "Bolder",
                  "size": "Large",
                  "wrap": true
                },
                {
                  "type": "TextBlock",
                  "text": "Agent: Next Best Action",
                  "spacing": "None",
                  "isSubtle": true
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "üìã Deployment Details",
          "weight": "Bolder",
          "size": "Medium",
          "spacing": "Medium"
        },
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "Environment",
              "value": "${environment}"
            },
            {
              "title": "Cluster",
              "value": "${cluster}"
            },
            {
              "title": "Namespace",
              "value": "${namespace}"
            },
            {
              "title": "Image Tags",
              "value": "${image_tags}"
            },
            {
              "title": "Commit SHA",
              "value": "${commit_sha}"
            },
            {
              "title": "Requested By",
              "value": "${requested_by}"
            },
            {
              "title": "Request Time",
              "value": "${request_timestamp}"
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "üìù Task Description",
          "weight": "Bolder",
          "size": "Medium",
          "spacing": "Medium"
        },
        {
          "type": "TextBlock",
          "text": "${task_description}",
          "wrap": true
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "üîó Quick Links",
          "weight": "Bolder",
          "size": "Medium",
          "spacing": "Medium"
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "ActionSet",
                  "actions": [
                    {
                      "type": "Action.OpenUrl",
                      "title": "View Pipeline",
                      "url": "${pipeline_url}"
                    }
                  ]
                }
              ]
            },
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "ActionSet",
                  "actions": [
                    {
                      "type": "Action.OpenUrl",
                      "title": "View Cluster",
                      "url": "${cluster_url}"
                    }
                  ]
                }
              ]
            },
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "ActionSet",
                  "actions": [
                    {
                      "type": "Action.OpenUrl",
                      "title": "Rollback",
                      "url": "${rollback_url}",
                      "style": "destructive"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "separator": true,
      "spacing": "Medium",
      "items": [
        {
          "type": "TextBlock",
          "text": "üí¨ Decision (Optional Comment)",
          "weight": "Bolder",
          "size": "Medium"
        },
        {
          "type": "Input.Text",
          "id": "approvalComment",
          "placeholder": "Add a comment for your decision...",
          "isMultiline": true,
          "maxLength": 500
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "‚úÖ Approve",
      "verb": "approveDeployment",
      "style": "positive",
      "data": {
        "action": "approve",
        "approval_id": "${approval_id}",
        "task": "${task_description}",
        "environment": "${environment}",
        "cluster": "${cluster}",
        "namespace": "${namespace}",
        "commit_sha": "${commit_sha}"
      }
    },
    {
      "type": "Action.Execute",
      "title": "‚ùå Reject",
      "verb": "rejectDeployment",
      "style": "destructive",
      "data": {
        "action": "reject",
        "approval_id": "${approval_id}",
        "task": "${task_description}",
        "environment": "${environment}",
        "cluster": "${cluster}",
        "namespace": "${namespace}",
        "commit_sha": "${commit_sha}"
      }
    }
  ],
  "msteams": {
    "width": "Full"
  }
}
